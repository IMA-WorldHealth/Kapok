<head>
  <link rel="stylesheet" href="{{=it.path}}/templates/style/normalize.css">
  <link rel="stylesheet" href="{{=it.path}}/templates/style/skeleton.css">
  <link rel="stylesheet" href="{{=it.path}}/templates/style/reports.css">
</head>

<body>
  <section id="letterhead"></section>

  <section id="title" class="center" style="margin-bottom : 40px;">
      <h5>IMCK Hopital Bon Berger</h5>
      <h5>{{=it.heading}}</h5>
  
{{? it.subheading }}
      <h6>{{=it.subheading}}</h6>
{{?}}
  </section>
 
  <section>
    <table class="">
      <thead>
        <tr style="border-bottom : 1px solid grey">
          <th style="text-align : left;">Account Number</th>
          <th style="text-align : left;">Account Title</th>
        </tr>
      </thead>
      
      <tbody>
{{ it.accounts.forEach(function (line, index) { }}

        <tr class="totalRight {{? line.account_type_id === 3}}underline{{?}}">
          <td style="text-align : right; padding-right : 10px; {{? line.account_type_id === 3}}font-weight : bold;{{?}}">
            {{=line.account_number}}
          </td>   
          <td style="text-align : left; padding-left: {{=line.depth * 20}}px; {{? line.account_type_id === 3}}font-weight : bold;{{?}}">
            {{=line.account_txt}}
          </td>
        
        </tr> 
{{ }); }}
      </tbody>
    </table>
  </section>
</body>
